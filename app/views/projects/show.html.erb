<div class="row">
  <div class="span12">
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-error" %>
        <%= flash[:error] %>
      </div>
    <% end %>
    <h1><%= @project.title %></h1>
    <p><strong>Client:</strong> <%= @project.client.email %></p>
    <p><strong>Budget:</strong> <%= @project.budget %></p>
    <p><strong>Weekly Rate:</strong> <%= @project.weekly_rate %></p>
    <% if @project.user_stories.length > 0 %>
      <table class="table table-striped">
          <thead>
            <th>Title</th>
            <th>Story</th>
            <th>Complexity</th>
            <th>Estimate</th>
            <th>Developer</th>
          </thead>
          <tbody>
            <% @project.user_stories.each do |user_story| %>
              <tr>
                <td><%= link_to "#{user_story.title}", project_user_story_path(@project, user_story) %></td>
                <td><%= user_story.content %></td>
                <td><%= user_story.complexity %></td>
                <td><%= user_story.estimate %></td>
                <td><%= user_story.developer.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
      <br>
    <%= link_to "Add User Stories", new_project_user_story_path(@project) %>
    <br>
    <%= link_to "Back", projects_path %>
  </div>
</div>
